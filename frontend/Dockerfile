# Usa Node.js para construir la aplicaci贸n
FROM node:18 AS build

# Directorio de trabajo dentro del contenedor
WORKDIR /app

# Copia los archivos del frontend
COPY package*.json ./
COPY ./ ./

# Instala las dependencias y construye la aplicaci贸n
RUN npm install
RUN npm run build

# Usa Nginx para servir la aplicaci贸n
FROM nginx:alpine

# Copia el archivo de configuraci贸n de Nginx al contenedor
COPY nginx/nginx.conf /etc/nginx/conf.d/default.conf

# Copia los archivos construidos al contenedor de Nginx
COPY --from=build /app/build /usr/share/nginx/html

# Expone el puerto 80
EXPOSE 80

# Comando para iniciar Nginx
CMD ["nginx", "-g", "daemon off;"]
